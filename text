backend/app.py
from fastapi import FastAPI

app = FastAPI()

@app.get("/")
def read_root():
    return {"status": "healthy"}

@app.get("/health")
def health_check():
    return {"status": "ok"}


backend/requirements.txt
fastapi==0.115.0
uvicorn==0.30.0
psycopg2-binary==2.9.9


db/init.sql
CREATE TABLE tasks (
    id SERIAL PRIMARY KEY,
    task_name VARCHAR(100),
    creation_date DATE,
    done BOOLEAN DEFAULT FALSE,
    accomplish_time INT,
    topic_type VARCHAR(100)
);

docker-compose.yml
services:
  backend:
    build: backend/
    ports:
      - 8000:8000
    depends_on: 
      - db
    networks:
      - taskmaster-network

  db:
    image: postgres:15
    environment:
      - POSTGRES_USER=admin
      - POSTGRES_PASSWORD=pass
      - POSTGRES_DB=tasks
    volumes:
      - postgres_db_data:/var/lib/postgresql/data
      - ./db/init.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - taskmaster-network

volumes:
  postgres_db_data:
    driver: local

networks:
  taskmaster-network:
    driver: bridge
